{
  "manifest_version": 3,
  "name": "WorldTimeBoy",
  "version": "1.0.1",
  "author": "fengwei.wang",
  "description": "Multi-timezone time display Chrome Extension. Inspired by WorldTimeBuddy.com",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "WorldTimeBoy"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
